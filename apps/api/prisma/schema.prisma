generator client {
  provider = "prisma-client-js"
  // Use default output (node_modules/@prisma/client) so the runtime can import '@prisma/client'
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id           String   @id @default(uuid())
  name         String?
  email        String   @unique
  password     String?
  provider     String?
  providerId   String?  
  refreshToken String?
  bio          String?
  otpCode        String?      
  otpExpiry      DateTime?     
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}


enum Role {
  USER
  ADMIN
}